<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to locations_path, 
        class: "inline-flex items-center text-blue-600 hover:text-blue-800" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Locations
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-start mb-6">
      <h1 class="text-3xl font-bold">
        <%= @location.address.presence || @location.ip_address %>
      </h1>
      <div class="text-gray-600">
        <p>Lat: <%= number_with_precision(@location.latitude, precision: 4) %></p>
        <p>Long: <%= number_with_precision(@location.longitude, precision: 4) %></p>
      </div>
    </div>

    <h2 class="text-2xl font-semibold mb-4">7-Day Forecast</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-7 gap-4">
      <% @forecast.each do |day| %>
        <div class="bg-gray-50 rounded-lg p-4 text-center">
          <h3 class="font-medium text-lg mb-2">
            <%= day[:date].strftime('%a, %b %d') %>
          </h3>
          <div class="space-y-2">
            <p class="text-red-600">
              High: <%= number_with_precision(day[:high], precision: 1) %>°F
            </p>
            <p class="text-blue-600">
              Low: <%= number_with_precision(day[:low], precision: 1) %>°F
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
